        <!-- Primary brand color. -->
        <item name="colorPrimary">#9145FF</item>
        <item name="colorPrimaryVariant">#A780FF</item>
        <item name="colorOnPrimary">#FFF6F6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">#FFB465</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->


